<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Juego del gato"
        android:textSize="50sp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <LinearLayout
        android:id="@+id/gg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/titulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


           <LinearLayout
               android:id="@+id/row1"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintBottom_toTopOf="@+id/row2"
            >
               <androidx.constraintlayout.widget.ConstraintLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   >

                   <Button
                       android:id="@+id/cuadro1"
                       android:layout_width="120dp"
                       android:layout_height="150dp"
                       android:background="@drawable/fondo"
                       android:onClick="colocar"
                       app:backgroundTint="@null"
                       app:layout_constraintEnd_toStartOf="@id/cuadro2"
                       app:layout_constraintHorizontal_chainStyle="packed"
                       app:layout_constraintStart_toStartOf="parent"
                       app:layout_constraintTop_toTopOf="parent"></Button>

                   <Button
                       android:id="@+id/cuadro2"
                       android:layout_width="120dp"
                       android:layout_height="150dp"
                       android:background="@drawable/fondo"
                       android:onClick="colocar"
                       app:backgroundTint="@null"
                       app:layout_constraintEnd_toStartOf="@id/cuadro3"
                       app:layout_constraintStart_toEndOf="@id/cuadro1"
                       app:layout_constraintTop_toTopOf="parent"></Button>

                   <Button
                       android:id="@+id/cuadro3"
                       android:layout_width="120dp"
                       android:layout_height="150dp"
                       android:background="@drawable/fondo"
                       android:onClick="colocar"
                       app:backgroundTint="@null"

                       app:layout_constraintEnd_toEndOf="parent"
                       app:layout_constraintStart_toEndOf="@id/cuadro2"
                       app:layout_constraintTop_toTopOf="parent"></Button>
               </androidx.constraintlayout.widget.ConstraintLayout>
           </LinearLayout>

            <LinearLayout
                app:layout_constraintTop_toBottomOf="@+id/row1"
                android:id="@+id/row2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/row3"
                >
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <Button
                        android:id="@+id/cuadro4"
                        android:layout_width="120dp"
                        android:layout_height="150dp"
                        android:background="@drawable/fondo"
                        android:onClick="colocar"
                        app:backgroundTint="@null"
                        app:layout_constraintEnd_toStartOf="@id/cuadro5"
                        app:layout_constraintHorizontal_chainStyle="packed"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"></Button>

                    <Button
                        android:id="@+id/cuadro5"
                        android:layout_width="120dp"
                        android:layout_height="150dp"
                        android:background="@drawable/fondo"
                        android:onClick="colocar"
                        app:backgroundTint="@null"
                        app:layout_constraintEnd_toStartOf="@id/cuadro6"
                        app:layout_constraintStart_toEndOf="@id/cuadro4"
                        app:layout_constraintTop_toTopOf="parent"></Button>

                    <Button
                        android:id="@+id/cuadro6"
                        android:layout_width="120dp"
                        android:layout_height="150dp"
                        android:background="@drawable/fondo"
                        android:onClick="colocar"
                        app:backgroundTint="@null"

                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/cuadro5"
                        app:layout_constraintTop_toTopOf="parent"></Button>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

            <LinearLayout
                app:layout_constraintTop_toBottomOf="@+id/row2"
                android:id="@+id/row3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                >
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <Button
                        android:id="@+id/cuadro7"
                        android:layout_width="120dp"
                        android:layout_height="150dp"
                        android:background="@drawable/fondo"
                        android:onClick="colocar"
                        app:backgroundTint="@null"
                        app:layout_constraintEnd_toStartOf="@id/cuadro8"
                        app:layout_constraintHorizontal_chainStyle="packed"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"></Button>

                    <Button
                        android:id="@+id/cuadro8"
                        android:layout_width="120dp"
                        android:layout_height="150dp"
                        android:background="@drawable/fondo"
                        android:onClick="colocar"
                        app:backgroundTint="@null"
                        app:layout_constraintEnd_toStartOf="@id/cuadro9"
                        app:layout_constraintStart_toEndOf="@id/cuadro7"
                        app:layout_constraintTop_toTopOf="parent"></Button>

                    <Button
                        android:id="@+id/cuadro9"
                        android:layout_width="120dp"
                        android:layout_height="150dp"
                        android:background="@drawable/fondo"
                        android:onClick="colocar"
                        app:backgroundTint="@null"

                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/cuadro8"
                        app:layout_constraintTop_toTopOf="parent"></Button>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>



        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
    <TextView
        android:id="@+id/resultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HAS GANADO CHAVAL"
        app:layout_constraintTop_toBottomOf="@+id/gg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textColor="@color/black">

    </TextView>


</androidx.constraintlayout.widget.ConstraintLayout>